doctype

html(lang="ru")
  
  -var active = 'Корзина' //активный пункт меню, список в header.jade
  -var pageTitle = 'Корзина' + ' - TANA' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    // Content
    .content
      .container
        
        // Breadcrumbs
        ul.breadcrumbs.hidden-xs
          li
            a(href="#!") Интернет магазин «TANA»
          li
            span Заголовок страницы
        
        .row
          .col-sm-3.hidden-xs
            
            // Catalog menu
            include ./_include/_catalog-menu

            // Banner
            .banner
              a(href="#!")
                img(src="./img/banner-sitebar.png", alt="").img-responsive
            
          .col-sm-9
            
            // Catalog menu mobile button
            .catalog__menu__button
              a(href="#popup-catalog-menu").catalog__menu__title.open-popup-menu
                i.ion-ios-list
                | Каталог товаров
            
            .h1 Корзина
            
            // Cart
            .cart
              table.cart__table
                thead
                  tr
                    th.th--1 фото
                    th.th--2 Наименование
                    th.th--3 цена
                    th.th--4 КОличество
                    th.th--5 сумма
                    th.th--6 &nbsp;
                tbody
                  tr
                    td.cart__img
                      a(href="#!")
                        img(src="./img/catalog-img-1.png", alt="")
                    td.cart__title
                      small.cart__small Швейные челнки
                      a(href="#!")
                        strong Челнок 130.15.024 Cerliani
                    td.cart__price
                      small.cart__small &nbsp;
                      strong 1 299
                        i.icon-rouble
                    td.cart__number
                      small.cart__small &nbsp;
                      select.select
                        option(selected) 10
                        option 20
                        option 30
                        option 40
                        option 50
                        option 60
                    td.cart__price-total
                      small.cart__small &nbsp;
                      strong 12 990
                        i.icon-rouble
                    td.cart__delete
                      small.cart__small &nbsp;
                      a(href="#!")
                        i.ion-backspace
                  tr
                    td.cart__img
                      a(href="#!")
                        img(src="./img/catalog-img-2.png", alt="")
                    td.cart__title
                      small.cart__small Швейные нитки
                      a(href="#!")
                        strong Комплексные швейные нитки EURON K 630/3 №15
                    td.cart__price
                      small.cart__small &nbsp;
                      strong 1 299
                        i.icon-rouble
                    td.cart__number
                      small.cart__small &nbsp;
                      select.select
                        option(selected) 72
                        option 20
                        option 30
                        option 40
                        option 50
                        option 60
                    td.cart__price-total
                      small.cart__small &nbsp;
                      strong 432 000
                        i.icon-rouble
                    td.cart__delete
                      small.cart__small &nbsp;
                      a(href="#!")
                        i.ion-backspace
                  tr
                    td.cart__img
                      a(href="#!")
                        img(src="./img/catalog-img-3.png", alt="")
                    td.cart__title
                      small.cart__small Швейные стержни
                      a(href="#!")
                        strong Стержень для быстрой смены лапок 4009
                    td.cart__price
                      small.cart__small &nbsp;
                      strong 850
                        i.icon-rouble
                    td.cart__number
                      small.cart__small &nbsp;
                      select.select
                        option(selected) 999
                        option 20
                        option 30
                        option 40
                        option 50
                        option 60
                    td.cart__price-total
                      small.cart__small &nbsp;
                      strong 849 000
                        i.icon-rouble
                    td.cart__delete
                      small.cart__small &nbsp;
                      a(href="#!")
                        i.ion-backspace
    
    include ./_include/_footer
