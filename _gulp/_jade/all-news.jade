doctype

html(lang="ru")
  
  -var active = 'Новости' //активный пункт меню, список в header.jade
  -var pageTitle = 'Новости' + ' - TANA' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    // Content
    .content
      .container
        
        // Breadcrumbs
        ul.breadcrumbs.hidden-xs
          li
            a(href="#!") Интернет магазин «TANA»
          li
            span Заголовок страницы
        
        .row
          .col-sm-3.hidden-xs
            
            // Catalog menu
            include ./_include/_catalog-menu

            // Banner
            .banner
              a(href="#!")
                img(src="./img/banner-sitebar.png", alt="").img-responsive
            
          .col-sm-9
            
            // Catalog menu mobile button
            .catalog__menu__button
              a(href="#popup-catalog-menu").catalog__menu__title.open-popup-menu
                i.ion-ios-list
                | Каталог товаров
            
            .h1 Новости
            
            // News
            .news
              .news__block
                a(href="#!").h4 48-ая Федеральная Оптовая Ярмарка ТекстильЛегпром
                .news__block__wrapper
                  div.hidden-xs
                    img(src="./img/news-list-img-1.png", alt="").img-thumbnails
                  div
                    p.news__block__text Приглашаем Вас посетить 48-ю Федеральную Оптовую Ярмарку ТекстильЛегпром, которая будет проходить с 14 по 17 февраля в г. Москва, ВДНХ, пав. 75. Нами будет представлено оборудование различного уровня сложности, а менеджеры-специалисты окажут вам квалифицированную консультацию. Рады будем видеть каждого из вас на наших стендах.
                      
              .news__block
                a(href="#!").h4 Выставка Текстильлегпром
                .news__block__wrapper
                  div.hidden-xs
                    img(src="./img/news-list-img-2.png", alt="").img-thumbnails
                  div
                    p.news__block__text Посетите наши стенды В-1, В-3, С-7 и С-7А в павильоне 55, а также стенд О-16 в павильоне 75. Нами будет представлено оборудование различного уровня сложности, а менеджеры-специалисты окажут вам квалифицированную консультацию. Рады будем видеть каждого из вас на наших стендах.
                      
              .news__block
                a(href="#!").h4 Кризису - бой!
                .news__block__wrapper
                  div.hidden-xs
                    img(src="./img/news-list-img-3.png", alt="").img-thumbnails
                  div
                    p.news__block__text Теперь любую вышивальную машину можно приобрести с рассрочкой платежа от 6 месяцев до 3 лет! Мы считаем, что данная возможность позволит многим компаниям, желающим начать строить свой бизнес в столь трудной экономической ситуации, развить свое предприятие без крупных начальных капиталовложений.
                    
              .news__block
                a(href="#!").h4 Выставка БиОТ
                .news__block__wrapper
                  div.hidden-xs
                    img(src="./img/news-list-img-4.png", alt="").img-thumbnails
                  div
                    p.news__block__text С 10 по 13 декабря в Москве пройдет Международная специализированная выставка "Безопасность и Охрана Труда. Первая выставка БиОТ приходится на 1992 год и за этот период завоевала неплохую поплярность и производителей и различных компаний. 
                      
            // Pagination
            mixin pagination
                
            
    
    include ./_include/_footer
    //- div(style="height: 1000px; background-color: #000")
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
      <script src='./js/libs/html5shiv/html5shiv.min.js'>
      <script src='./js/libs/html5shiv/html5shiv-printshiv.min.js'>
      <script src='./js/libs/html5shiv/respond.min.js'><![endif]

    include ./_include/_footer-js
    // Load Scripts
    script(src="./js/libs.js")
    script(src="./js/libs/slick/slick.min.js")
    script(src="./js/libs/jquery-selectric/jquery.selectric.min.js")
    script(src="./js/libs/readmore/readmore.min.js")
    script(src="./js/libs/swiper/js/swiper.min.js")
    script(src="./js/common.js")
    include ./_include/_js-body-bottom
