doctype

html(lang="ru")
  
  -var active = 'Каталог товаров' //активный пункт меню, список в header.jade
  -var pageTitle = 'Каталог товаров' + ' - TANA' //title страницы для генерации верстки  
  -var seo = 'true'

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    // Content
    .content
      .container
        .row
          .col-sm-3.hidden-xs
            
            // Catalog menu
            include ./_include/_catalog-menu
            
            // Filter
            #catalog__filter.catalog__filter
              .catalog__filter__title 
                i.ion-android-settings
                | фильтры
                
              .filter#filters
                form(action="#!" method="get")
                  .filter__body
                    .filter__block
                      //- .filter__head Основной материал
                      label.filter__row(for="manufacturer__0")
                        input(type="checkbox" name="f_manufacturer[]")#manufacturer__0
                        span.checkbox
                        span.label BROTHER
                        span.sup (120)
                      label.filter__row(for="manufacturer__1")
                        input(type="checkbox" name="f_manufacturer[]")#manufacturer__1
                        span.checkbox
                        span.label JUKI 
                        span.sup (55)
                      label.filter__row(for="manufacturer__2")
                        input(type="checkbox" name="f_manufacturer[]")#manufacturer__2
                        span.checkbox
                        span.label PEGASUS 
                        span.sup (21)
                      label.filter__row(for="manufacturer__3")
                        input(type="checkbox" name="f_manufacturer[]")#manufacturer__3
                        span.checkbox
                        span.label PODOLSK 
                        span.sup (50)
                      label.filter__row(for="manufacturer__4")
                        input(type="checkbox" name="f_manufacturer[]")#manufacturer__4
                        span.checkbox
                        span.label REACHE 
                        span.sup (80)
                      label.filter__row(for="manufacturer__5")
                        input(type="checkbox" name="f_manufacturer[]")#manufacturer__5
                        span.checkbox
                        span.label SUISEI 
                        span.sup (22)
                      label.filter__row(for="manufacturer__6")
                        input(type="checkbox" name="f_manufacturer[]")#manufacturer__6
                        span.checkbox
                        span.label SUSSEI 
                        span.sup (500)
                      label.filter__row(for="manufacturer__7")
                        input(type="checkbox" name="f_manufacturer[]" disabled)#manufacturer__7
                        span.checkbox
                        span.label TEXTIMA 
                        span.sup (0)
                      label.filter__row(for="manufacturer__8")
                        input(type="checkbox" name="f_manufacturer[]" disabled)#manufacturer__8
                        span.checkbox
                        span.label YAMATO 
                        span.sup (0)
                  
                    .filter__block.filter__block--slider
                      //- .filter__head цена изделия
                      .filter__slider
                        .range__zero 0
                        #filter__range
                      .filter__cost.table
                        .table-cell 
                          span от
                        .table-cell
                          input#priceMin(type='text', value='5000').form-control
                        .table-cell
                          span до
                        .table-cell
                          input#priceMax(type='text', value='15000').form-control
                        .table-cell
                          span руб
                    
                    button(type="button").btn.btn--border.btn--block Сбросить фильтр
                    button(type="button")#filter__hide.btn.btn--unborder.btn--block.visible-xs Скрыть фильтр
              
          .col-sm-9
            
            .catalog__buttons
              div
                // Catalog menu mobile button
                .catalog__menu__button
                  a(href="#popup-catalog-menu").catalog__menu__title.open-popup-menu
                    i.ion-ios-list
                    | Каталог
              div
                // Catalog filter mobile button
                .catalog__filter__button
                  a(href="#popup-catalog-filter").catalog__menu__title.open-popup-filter
                    i.ion-android-settings
                    | Фильтр
            
            .h1 ЗАПЧАСТИ РАСКРОЙНЫХ МАШИН
            
            // Catalog
            .catalog
              
              // Catalog category
              .catalog__category
                ul.row
                  li.col-sm-4.col-xs-6.col-xxs-12
                    a(href="#!") ремни зубчатые
                  li.col-sm-4.col-xs-6.col-xxs-12
                    a(href="#!") ремни кожанные
                  li.col-sm-4.col-xs-6.col-xxs-12
                    a(href="#!") ремни кордовые текстропные
                  li.col-sm-4.col-xs-6.col-xxs-12.active
                    a(href="#!") ремни пластиковые
              
              // Catalog sorting
              .catalog__sorting
                .catalog__sorting__wrapper
                  div
                    .catalog__sorting__block
                      label.hidden-xxs Сортировать:
                      select.select.select--sort-by1
                        option(selected) По умолчанию
                        option По увеличению цены
                        option По уменьшению цены
                        option Сначала новые
                        option Сначала старые
                  
                  div
                    .catalog__sorting__block.catalog__sorting__block--right
                      label.hidden-xxs Выводить по:
                      select.select.select--sort-by2
                        option(selected) 18
                        option 36
                        option 72

              // Catalog row
              .catalog__row
                .catalog__block
                  form(action="#!")
                    .catalog__block__line
                    i.icon.icon--action
                    .catalog__block__info Швейные челнки
                    .catalog__block__title Челнок 130.15.024 Cerliani
                    .catalog__block__img
                      img(src="./img/catalog-img-1.png", alt="")
                    .catalog__block__bottom
                      .catalog__block__price
                        div
                          strong 1 299
                            i.icon.icon-rouble
                        div
                          sup 1 699
                            i.icon.icon-rouble
                      button(type="button").btn.btn--border Купить
                      
                .catalog__block
                  form(action="#!")
                    .catalog__block__line
                    .catalog__block__info Швейные нитки
                    .catalog__block__title Комплексные швейные нитки EURON K 630/3 №15
                    .catalog__block__img
                      img(src="./img/catalog-img-2.png", alt="")
                    .catalog__block__bottom
                      .catalog__block__price
                        div
                          strong 899
                            i.icon.icon-rouble
                      button(type="button").btn.btn--border Купить
                      
                .catalog__block
                  form(action="#!")
                    .catalog__block__line
                    .catalog__block__info Швейные стержни
                    .catalog__block__title Стержень для быстрой смены лапок 4003
                    .catalog__block__img
                      img(src="./img/catalog-img-3.png", alt="")
                    .catalog__block__bottom
                      .catalog__block__price
                        div
                          strong 10 999
                            i.icon.icon-rouble
                      button(type="button").btn.btn--border Купить
                      
                .catalog__block
                  form(action="#!")
                    .catalog__block__line
                    .catalog__block__info Окантователи
                    .catalog__block__title Окантователь  зиг заг (3слож)
                    .catalog__block__img
                      img(src="./img/catalog-img-4.png", alt="")
                    .catalog__block__bottom
                      .catalog__block__price
                        div
                          strong 1 699
                            i.icon.icon-rouble
                      button(type="button").btn.btn--border Купить
                      
                .catalog__block
                  form(action="#!")
                    .catalog__block__line
                    .catalog__block__info Швейные подгибки
                    .catalog__block__title Подгибка КНР-23
                    .catalog__block__img
                      img(src="./img/catalog-img-5.png", alt="")
                    .catalog__block__bottom
                      .catalog__block__price
                        div
                          strong 699
                            i.icon.icon-rouble
                      button(type="button").btn.btn--border Купить
                      
                .catalog__block
                  form(action="#!")
                    .catalog__block__line
                    .catalog__block__info Швейные стержни
                    .catalog__block__title Стержень для быстрой смены лапок 4009
                    .catalog__block__img
                      img(src="./img/catalog-img-6.png", alt="")
                    .catalog__block__bottom
                      .catalog__block__price
                        div
                          strong 10 999
                            i.icon.icon-rouble
                      button(type="button").btn.btn--border Купить
    
            // Pagination
            .pagination
              .pagination__wrapper
                ul
                  li.pagination__prev
                    a(href="#!") Вперед
                  li
                    a(href="#!") 1
                  li
                    a(href="#!") 2
                  li
                    a(href="#!") 3
                  li
                    a(href="#!") 4
                  li.active
                    a(href="#!") 5
                  li
                    a(href="#!") 6
                  li.pagination__next
                    a(href="#!") Назад
    
    include ./_include/_footer
    //- div(style="height: 1000px; background-color: #000")
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
      <script src='./js/libs/html5shiv/html5shiv.min.js'>
      <script src='./js/libs/html5shiv/html5shiv-printshiv.min.js'>
      <script src='./js/libs/html5shiv/respond.min.js'><![endif]

    include ./_include/_footer-js
    // Load Scripts
    script(src="./js/libs.js")
    script(src="./js/libs/slick/slick.min.js")
    script(src="./js/libs/jquery-selectric/jquery.selectric.min.js")
    script(src="./js/libs/readmore/readmore.min.js")
    script(src="./js/libs/swiper/js/swiper.min.js")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui-touch-punch/0.2.3/jquery.ui.touch-punch.min.js')
    script(src="./js/common.js")
    include ./_include/_js-body-bottom
